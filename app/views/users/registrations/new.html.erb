<div class="login span5">
  
  <%= devise_error_messages! %>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class:'well form-horizontal'}) do |f| %>
    
    <fieldset>
      <legend>Sign Up</legend>
      
      <div class="control-group">
        <%= f.label :firstname, class: 'control-label' %>
        <div class="controls"><%= f.text_field :firstname, autocomplete: :off %></div>
      </div>
      
      <div class="control-group">
        <%= f.label :lastname, class: 'control-label' %>
        <div class="controls"><%= f.text_field :lastname, autocomplete: :off %></div>
      </div>
      
      <div class="control-group">
        <%= f.label :country, class: 'control-label' %>
        <div class="controls"><%= f.text_field :country, autocomplete: :off %></div>
      </div>
      
      <div class="control-group">
        <%= f.label :city, class: 'control-label' %>
        <div class="controls"><%= f.text_field :city, autocomplete: :off %></div>
      </div>
      
      <div class="control-group">
        <%= f.label :address, class: 'control-label' %>
        <div class="controls"><%= f.text_field :address, autocomplete: :off %></div>
      </div>
      
      <div class="control-group">
        <%= f.label :email, class: 'control-label' %>
        <div class="controls"><%= f.email_field :email, autocomplete: :off %></div>
      </div>
      
      <div class="control-group">
        <%= f.label :telephone, class: 'control-label' %>
        <div class="controls"><%= f.email_field :telephone, autocomplete: :off %></div>
      </div>
      
      <div class="control-group">
        <%= f.label :password, class: 'control-label' %>
        <div class="controls"><%= f.password_field :password, autocomplete: :off %></div>
      </div>
      
      <div class="control-group">
        <%= f.label :password_confirmation, class: 'control-label' %>
        <div class="controls"><%= f.password_field :password_confirmation, autocomplete: :off %></div>
      </div>
      
      <div class="control-group">
        <%= f.submit "Sign up", class: 'btn btn-primary' %>
      </div>
      
      <%= render :partial => "devise/shared/links" %>
    </fieldset>
    
  <% end %>

</div>
