<h1 style="margin-bottom: 20px;">Account <%= @account.number %></h1>

<p>
  <b>Account Type</b><br>
  <%= @account.name %>
</p>

<p>
  <b>Balance</b><br>
  &pound; <%= @account.balance %>
</p>

<h3>Recent Transactions</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Type</th>
      <th>Amount</th>
      <th>Balance</th>
      <th>Overdraft cost</th>
      <th>Initiator</th>
    </tr>
  </thead>
  <tbody>
    <% @account.transactions.order('created_at desc').limit(5).each do |t| %>
      <tr>
        <td><%= pretty_date t.created_at %></td>
        <td><%= t.transaction_type %></td>
        <td>&pound; <%= t.amount.abs %></td>
        <td<%= t.balance < 0 ? ' class=red' : '' %>>&pound; <%= t.balance %></td>
        <td><%= t.overdraft_cost > 0 ? "&pound; #{t.overdraft_cost}".html_safe : '&mdash;'.html_safe %></td>
        <td><%= t.initiator %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to 'Back', client_accounts_path, :class => 'btn'  %>
</div>
