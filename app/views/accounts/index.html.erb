<h1>Accounts</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.id %></td>
        <td><%= link_to account.user_id, account_path(account) %></td>
        <td><%= account.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_account_path(account), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', account_path(account), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @accounts %>

<%= link_to 'New', new_account_path, :class => 'btn btn-primary' %>
