<%= form_for @account, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Account</legend>

    

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :number, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :number, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :balance, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :balance, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', accounts_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
